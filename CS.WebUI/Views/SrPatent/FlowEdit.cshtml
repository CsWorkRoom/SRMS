@{
    Layout = "~/Views/Shared/_Content.cshtml";
}
@using System.Collections
@model CS.BLL.SR.SR_PATENT.Entity
<form id="form" class="layui-form" action="" method="post">
    <input type="hidden" id="ID" name="ID" value="@Model.ID"/>
    <input type="hidden" id="Subitems"  value=""/>
    <div class="form-top-content">
        <fieldset class="layui-elem-field layui-field-title" style="margin-top: 30px;">
            <legend>成果专利基础信息</legend>
        </fieldset>
    <div class="layui-collapse" lay-filter="test">
        <div class="layui-colla-item">
            <h2 class="layui-colla-title">@Model.ACHIEVEMENTS_NAME</h2>
            <div class="layui-colla-content">
                <div class="layui-row">
                    <div class="layui-col-xs6">
                        <div class="layui-form-item">
                            <label class="layui-form-label">成果名称<span class="imust">*</span></label>
                            <div class="layui-input-block">
                                <input type="text" id="ACHIEVEMENTS_NAME" readonly="readonly" name="ACHIEVEMENTS_NAME" value="@Model.ACHIEVEMENTS_NAME" lay-verify="name" placeholder="请输入成果名称" autocomplete="off" class="layui-input">
                            </div>
                        </div>
                    </div>
                    <div class="layui-col-xs6">
                        <div class="layui-form-item">
                            <label class="layui-form-label">成果专利类型<span class="imust">*</span></label>
                            <div class="layui-input-block">
                                <input type="text" name="TYPE_ID" readonly="readonly" id="TYPE_ID" value="@ViewBag.TypeName" autocomplete="off" class="layui-input">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="layui-row">
                    <div class="layui-col-xs6">
                        <div class="layui-form-item">
                            <label class="layui-form-label">专利号<span class="imust">*</span></label>
                            <div class="layui-input-block">
                                <input type="text" id="PATENT_NAME" readonly="readonly" name="PATENT_NAME" value="@Model.PATENT_NAME" lay-verify="name" placeholder="请输入专利号" autocomplete="off" class="layui-input">
                            </div>
                        </div>
                    </div>
                    <div class="layui-col-xs6">
                        <div class="layui-form-item">
                            <label class="layui-form-label">期刊名称<span class="imust">*</span></label>
                            <div class="layui-input-block">
                                <input type="text" readonly="readonly" name="PERIODICAL_NAME" id="PERIODICAL_NAME" value="@Model.PERIODICAL_NAME" lay-verify="name" placeholder="请输入期刊名称" autocomplete="off" class="layui-input">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="layui-form-item">
                    <div class="layui-col-xs6">
                        <div class="layui-form-item">
                            <label class="layui-form-label">所属课题<span class="imust">*</span></label>
                            <div class="layui-input-block">
                                <input type="text" id="TOPIC_NAME" readonly="readonly" name="TOPIC_NAME" value="@ViewBag.TopicName" lay-verify="name"  autocomplete="off" class="layui-input">
                            </div>
                        </div>
                    </div>
                    <div class="layui-col-xs6">
                        <div class="layui-form-item">
                            <label class="layui-form-label">所属学科<span class="imust">*</span></label>
                            <div class="layui-input-block">
                                <input type="text" id="SUBJECT_ID" readonly="readonly" name="SUBJECT_ID" value="@ViewBag.SubjectName" lay-verify="name"  autocomplete="off" class="layui-input">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">课题备注</label>
                    <div class="layui-input-block">
                        <textarea name="REMARK" class="layui-input reportH" readonly="readonly">@Model.REMARK</textarea> 
                    </div>
                </div>
                <div class="layui-form-item" >
                    <!--引入外导文件视图-->
                    @Html.Partial("PVUpFile",
                        new CS.WebUI.Models.FileMsg
                        {
                            PathName = "TopicDetailPath",//存放文件的目录名.在web.config中配置
                            FILES = Model.FILES,
                            IsEnbale=false,
                            IsRequire = true//是否必填项（true=必填，false=非必填）,默认非必填
                        })
                </div>          
         
            </div>
        </div>
    </div>
	
</form>



<script>
    var tree,laytpl;
    var data;
    layui.use([ 'laytpl','tree','layer', 'form', 'jquery', 'element', 'table'], function () {
        tree = layui.tree;
        laytpl = layui.laytpl;
        layer = layui.layer;
        form = layui.form;
        tab = layui.tab;
        $ = layui.$;
        element = layui.element;
        table = layui.table;
     
    });


</script>

