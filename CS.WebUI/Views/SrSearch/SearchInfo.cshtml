@{
    Layout = "~/Views/Shared/_Content.cshtml";
}
<style>
.fly-extend-banner-search {
    margin-top: 30px;
    width: 100%;
    text-align: center;
	height: 42px;
}
.layui-input{
height: 42px;
width: 400px;
border-radius:5px 0px 0px 5px;
}
.layui-btn{
height: 42px;
width: 80px;
border-radius:0px 5px 5px 0px;
}
</style>

    <div class="larry-bg-gray">
        <div class="layui-row">
            <div class="layui-col-md12" >
                <div class="fly-extend-banner-search">
                    <div class="layui-inline">
                        <input placeholder="输入文件名称进行搜索..." id="key" autocomplete="off" value="" class="layui-input">
                    </div><button class="layui-btn" id="btnSearch"><i class="layui-icon layui-icon-search"></i></button>
                </div>
                <div style="text-align:center;padding-top: 10px; color: red">* 确保查询结果的准确性;请输入完整的关键字进行查询;本页只展示20条查询结果. *</div>
            </div>
        </div>
        
        <fieldset class="layui-elem-field layui-field-title" style="margin-top: 10px;">
            <legend>查询结果</legend>
        </fieldset>
            <div id="datalist" class="layui-col-space10 "  style="height:600px;;background: #F1F2F7;padding: 10px;">
          
            </div>
    </div>
	


<script type="text/javascript" src="~/Views/SrSearch/JS/SearchInfo.js?2019"></script>

<script id="fileItem" type="text/html">  
    {{#  layui.each(d.list, function(index, item){ }}  
    <div class="layui-col-md3" >
        <div class="layui-card">
            <div class="layui-card-header">          
                {{# if (item.FORMAT=== ".txt") { }}  
                <i class="layui-icon layui-icon-form"></i>
                {{# } else if(item.FORMAT=== ".pdf") { }}  
                <i class="layui-icon layui-icon-pdf"></i> 
                {{# } else if(item.FORMAT=== ".xls" || item.FORMAT=== ".xlsx" ||item.FORMAT=== ".docx" ||item.FORMAT=== ".doc" ) { }}  
                <i class="layui-icon layui-icon-exl"></i> 
                {{# } else if(item.FORMAT=== ".jpg" ||  item.FORMAT=== ".png" ||  item.FORMAT=== ".gif" ||  item.FORMAT=== ".jpeg") { }}  
                <i class="layui-icon layui-icon-pic"></i> 
                {{# } else if(item.FORMAT=== ".html"||  item.FORMAT=== ".htm") { }}  
                <i class="layui-icon layui-icon-customs-clearance"></i> 
                {{# } else if(item.FORMAT=== ".zip" ||  item.FORMAT=== ".rar") { }}  
                <i class="layui-icon layui-icon-zip"></i> 
                {{# } else { }}  
                <i class="layui-icon layui-icon-attachment"></i>
                {{# } }}  
                <b><a href="javascript:fileDown('{{item.FILE_PATH}}')">{{item.DISPLAY_NAME}}</a></b>
            </div>
            <div class="layui-card-body">
                <span class="layui-badge layui-bg-blue">{{item.SOURE}}</span>
                {{# if (item.SOURE_OBJ!= null) { }}  
                <p title="{{item.SOURE_OBJ.NAME}}">名称：{{item.SOURE_OBJ.NAME.length>20?item.SOURE_OBJ.NAME.substring(0,20)+"...":item.SOURE_OBJ.NAME}}</p>
                <p>创建人：{{item.SOURE_OBJ.USER_NAME}}</p>
                <p>创建时间：{{item.SOURE_OBJ.CREATE_TIME}}</p>
                {{# }else{ }}  
                <p>名称：</p>
                <p>创建人：</p>
                <p>创建时间：</p>
                {{# } }}                  
            </div>
        </div>  
    </div>
    {{#  }); }}
</script>
<script>
    function fileDown(fileurl) {
        window.location.href = fileurl;
    }
</script>



